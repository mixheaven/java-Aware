package projet1;

public class Classromm {

	public static void main(String[] args) {
		// methode statique
		System.out.println(Wilder.whoAmI());
		
		// Jean claude rcoit une nouvelle instance de class Wilder
		Wilder jeanClaude = new Wilder("Jean-Claude");
		// utlisiation de getters
		System.out.print("1. Je m'appelle " + jeanClaude.getFirstname());
		System.out.println(" et je suis " + String.valueOf(jeanClaude.isAware()));
		jeanClaude.setAware(true);
		
		
		Wilder henri = new Wilder("Henri");
		System.out.print("2. " + henri.firstnameAndAware());

	}
	

}
